<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/lbl_signup_header"
        android:text="QUI SUIS - JE ?"
        style="@style/AppTheme.Widget.TextView"
        android:textSize="@dimen/font_size_xxlarge"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btn_priest"
        style="@style/AppTheme.Widget.Button.adventpro"
        android:layout_marginTop="60dp"
        android:text="UN CONFESSEUR"
        android:layout_below="@+id/lbl_signup_header"
        />
    <TextView
        android:id="@+id/lbl_or"
        style="@style/AppTheme.Widget.TextView"
        android:text="ou"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/font_size_medium_3"
        android:layout_below="@+id/btn_priest"
        />
    <Button
        android:id="@+id/btn_user"
        style="@style/AppTheme.Widget.Button.adventpro"
        android:layout_marginTop="15dp"
        android:text="UN FIDELE"
        android:layout_below="@+id/lbl_or"
        />

</RelativeLayout>
