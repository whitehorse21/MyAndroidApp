<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/bottombtn"
        android:layout_alignParentTop="true">
        <EditText
            android:id="@+id/et_password"
            android:hint="mot de passe"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:background="@color/colorGreyText"
            style="@style/AppTheme.Widget.EditText.Helvetica"
            android:layout_marginTop="10dp"/>

        <EditText
            android:hint="Confirmation mot de passe"
            android:layout_height="40dp"
            android:id="@+id/et_confirmpassword"
            android:inputType="textPassword"

            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:background="@color/colorGreyText"
            style="@style/AppTheme.Widget.EditText.Helvetica"
            android:layout_marginTop="10dp"/>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/default_padding_xlarge"
            android:layout_marginRight="@dimen/default_padding_xlarge"
            android:layout_marginTop="20dp"
            >
            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/check"
                android:src="@drawable/checkbox"
                >
            </ImageView>

            <TextView
                android:id="@+id/ForgotPasswordlabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                style="@style/AppTheme.Widget.TextView.Helvetica2"
                android:text="Recevoir une notification quand un prêtre
disponible se trouve dans un rayon de 2 km"
                />


        </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            style="@style/AppTheme.Widget.Button.adventpro"
            android:id="@+id/picturebtn"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >
            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/attach"
                >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                style="@style/AppTheme.Widget.TextView.Helvetica"
                android:text="JOINDRE"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                style="@style/AppTheme.Widget.TextView.Helvetica"
                android:text="MON"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:textStyle="bold"

                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                style="@style/AppTheme.Widget.TextView.Helvetica"
                android:text="CELEBRET"
                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGreyText"
            android:layout_marginLeft="10dp"
            style="@style/AppTheme.Widget.TextView.Helvetica"
            android:text="CONDITIONS Gnérales D’utilisation"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGreyText"
            android:layout_marginLeft="10dp"
            style="@style/AppTheme.Widget.TextView.Helvetica"
            android:text="Nous vous assurons de la confidentialité de ces données
qui ne seront ni publiées, ni cédées, ni vendues, et ne seront
utilisées que pour améliorer votre expérience utilisateur."
            />
    </LinearLayout>


    <Button
        android:layout_height="wrap_content"
        android:id="@+id/bottombtn"
        style="@style/AppTheme.Widget.Button.Full"
        android:layout_alignParentBottom="true"
        android:background="@drawable/grey_btn_selector"
        android:text="JE M'INSCRIS"
        android:gravity="center"
        android:paddingTop="15dp"
        />

</RelativeLayout>
